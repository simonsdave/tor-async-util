{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "get health response",
    "description": "get health response",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "enum": [
                "red",
                "green"
            ]
        },
        "details": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_]+$": {
                    "type": "string",
                    "enum": [
                        "red",
                        "green"
                    ]
                }
            }
        },
        "links": {
            "type": "object",
            "properties": {
                "self": {
                    "type": "object",
                    "properties": {
                        "href": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "href"
                    ]
                }
            },
            "required": [
                "self"
            ]
        }
    },
    "required": [
        "status",
        "links"
    ],
    "additionalProperties": false
}
